
<div class="slide-container">
  <h2>Bonjour <%= current_user.email %> </h2>
  <h1 class="fw-bolder headline load-hidden">Les conseils de Medi</h1>
  <h3 class="headline">Votre symptome: <%= @question.content %></h3>
  <div class="slide-container">🏅 Parcours  0%</div>

  <div class="card-wrapper">
    <div class="slide-content">
      <div class='widget-list'>
        <% @answer.tasks.each do |task|%>
          <div class="shadow card widget" data-controller="disable-card" >
            <div class='header-content'>
              <span class='overlay'>
                <%= link_to root_path do %>
                <%= image_tag 'close2.png', class:'avatar-close' %>
                <% end %>
              </span>
              <div class="card-title">
                <h3></h3>
              </div>
            </div>
            <div class="card-content">
              <p class="description"><%= task.content %></p>
              <div class="form-check form-switch"
                data-action="click->disable-card#disable"
                data-disable-card-target="card">
                <input class="form-check-input" type="checkbox" role="switch" id="disableCard-<%= task.id %>" checked>
                <label class="form-check-label" for="disableCard-<%= task.id %>">
                </label>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <script>
    ScrollReveal().reveal('.headline', { duration: 2000 });
    ScrollReveal().reveal('.widget', { interval: 200 });
  </script>
