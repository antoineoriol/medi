<div class="slide-container">
  <h2>Bonjour <%= current_user.email %> </h2>
  <h1 class="fw-bolder headline load-hidden">Les conseils de Medi</h1>
  <h3 class="headline">Votre symptome: <%= @question.content %></h3>
  <div class="">🏅 Parcours  0%</div>
    <div><p><%= image_tag 'pdf.png', class:'icon-pdf' %> Exporter en format PDF</p></div>

  <div class="card-wrapper">
    <div class="slide-content">
      <div class="widget-list row row-cols-1 row-cols-md-3 g-3">
        <% @answer.tasks.each do |task|%>
          <div class="shadow card mb-3 widget"
            data-disable-card-target="card"         >
            <div class="card-header bg-transparent " >
              <div class="form-check form-check-inline"
                data-controller="disable-card task"
                data-action="click->disable-card#disable ">
                <input data-action="click->task#update" class="form-check-input" type="checkbox" role="switch" id="disableCard-<%= task.id %>" data-task-url="<%= task_path(task) %>" data-task-target="task">
                <label class="form-check-label" for="disableCard-<%= task.id %>">
                </label>
                <div >
                  <%= button_to 'X', task_path(task),  method: :delete %>
                </div>
              </div>
            </div>
            <div class="card-body">
              <p class="description"><%= task.content %></p>
            </div>
            <div class="card-footer bg-transparent ">🏅 20%</div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <script>
    ScrollReveal().reveal('.headline', { duration: 2000 });
    ScrollReveal().reveal('.widget', { interval: 200 });
  </script>
