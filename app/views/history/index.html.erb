
<div class="container p-5" style="margin-top: 80px;">

  <div class="shadow shadow-container bg-opacity-75 rounded-4">
    <div class="tab-pane">
      <h1 class="text-center p-4">Mon historique</h1>
      <ul class="list-inline p-4">
        <% @questions.order(created_at: :desc).each do |question| %>
          <div class="border border-start-0 border-end-0 border-5 d-flex justify-content-between p-2">
            <h3>Symptome: <%= question.content %></h3>
            <% if question&.answer %>
              <div class="d-flex justify-content-between">
                <div><%= image_tag 'pdf.png', class:"icon-pdf" %></div>
                <div><%= link_to "Télécharger ma fiche", question_answer_tasks_path(question, question.answer, format: :pdf), target: :_blank, class: "text-decoration-none" %></div>
                <div><%= question.created_at.strftime('%d-%b-%Y - %Hh%M') %> </div>
              </div>
            <% end %>
          </div>
          <div class="p-2">
            <% question.answer&.tasks&.each do |task|  %>
              <p><%= task.content %></p>
            <% end %>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
